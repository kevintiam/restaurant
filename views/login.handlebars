<div class="login" id="login-container">
  <div class="login-connexion">
    <div class="connexion active" id="connexion">
      <p class="title">Connexion</p>
      <p class="subtitle">Connectez-vous à votre espace</p>
      <form action="" id="login-form" novalidate>
        <div class="user">
          <label for="user-login" class="input-with-icon">
            <i class="fas fa-envelope" aria-hidden="true"></i>
            <input
              type="text"
              id="user-login"
              name="user"
              placeholder="Adresse Email"
              autocomplete="off"
              required
            />
          </label>
          <label for="passwd-login" class="input-with-icon password-field">
            <i class="fas fa-lock" aria-hidden="true"></i>
            <input
              type="password"
              id="passwd-login"
              name="passwd"
              placeholder="Mot de passe"
              autocomplete="new-password"
              required
            />
            <button
              type="button"
              class="toggle-password"
              id="toggle-password-login"
              aria-label="Afficher le mot de passe"
            >
              <i class="fas fa-eye"></i>
            </button>
          </label>
        </div>
        <div class="option">
          <label class="remember">
            <input type="checkbox" name="memo" id="memo-login" />
            Se souvenir de moi
          </label>
          <a href="./forgot-password.html" id="forgot-password-link">Mot de
            passe oublié ?</a>
        </div>
        <span id="login-error-message"></span>
        <button type="submit">Se connecter</button>
        <div class="infos-login" id="infos-loging">
          <p>Vous n’avez pas encore de compte ?
            <a href="#register" id="register-bascule">Creer un compte</a></p>
        </div>
      </form>
    </div>
  </div>
  <div class="login-register">
    <div class="register" id="register">
      <p class="title">Inscription</p>
      <p class="subtitle">Créez votre compte dès maintenant</p>
      <form action="" id="register-form" novalidate>
        <div class="user">
          <div class="user-name">
            <!-- Nom d'utilisateur -->
            <label for="user-register" class="input-with-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
              <input
                type="text"
                name="user-name"
                id="user-register"
                required
                placeholder="Nom d'utilisateur"
              />
            </label>
            <!-- Prenom d'utilisateur -->
            <label for="subname-register" class="input-with-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
              <input
                type="text"
                name="user-subname"
                id="subname-register"
                required
                placeholder="Prenom d'utilisateur"
              />
            </label>
          </div>
          <div class="contact-info">
            <!-- Email -->
            <label for="email-register" class="input-with-icon">
              <i class="fas fa-envelope" aria-hidden="true"></i>
              <input
                type="email"
                name="email"
                id="email-register"
                required
                placeholder="Adresse Email"
              />
            </label>
          </div>
          <div class="password-fields">
            <!-- Mot de passe -->
            <label for="passwd-register" class="input-with-icon password-field">
              <i class="fas fa-lock" aria-hidden="true"></i>
              <input
                type="password"
                name="passwd"
                id="passwd-register"
                required
                placeholder="Mot de passe"
              />
              <button
                type="button"
                class="toggle-password"
                id="toggle-password-register"
                aria-label="Afficher le mot de passe"
              >
                <i class="fas fa-eye"></i>
              </button>
            </label>
            <!-- Confirmation du mot de passe -->
            <label
              for="passwd-confirm-register"
              class="input-with-icon password-field"
            >
              <i class="fas fa-lock" aria-hidden="true"></i>
              <input
                type="password"
                name="passwd-confirm"
                id="passwd-confirm-register"
                required
                placeholder="Confirmer le mot de passe"
              />
              <button
                type="button"
                class="toggle-password"
                id="toggle-password-confirm"
                aria-label="Afficher le mot de passe"
              >
                <i class="fas fa-eye"></i>
              </button>
            </label>
          </div>

        </div>
        <span id="register-error-message"></span>
        <button type="submit">S’inscrire</button>
        <div class="infos-register" id="infos-register">
          <p>Vous avez déjà un compte ?
            <a href="#connexion" id="login-bascule">Se connecter</a></p>
        </div>
      </form>
    </div>
  </div>
</div>