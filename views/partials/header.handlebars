<header>
  <div class="container" id="container">
    <div class="logo">
      <i class="fas fa-utensils"></i>
      <span>Le Gourmet Africain</span>
    </div>
    <div class="hambuger-menu" id="hambuger-menu">
      <span class="hambuger"></span>
      <span class="hambuger"></span>
      <span class="hambuger"></span>
    </div>
    <div class="menu-nav" id="menu-nav">
      <button class="close-menu" id="close-menu">×</button>
      <nav class="main-nav">
        <ul>
          <li><a href="/" class="active">Accueil</a></li>
          <li><a href="#menu">Menu</a></li>
          <li><a href="#about">À propos</a></li>
          <li><a href="#contact">Contact</a></li>
          <li>
            <a href="/panier" class="cart-icon" id="cartIcon">
              <i class="fas fa-shopping-cart"></i>
              <span class="cart-count" id="cartCount">0</span>
            </a>
          </li>
          <li class="user-info">
            {{#if user}}
              <span>Bonjour, {{user.prenom}}</span>
              {{#if isAdmin}}
                <a href="/admin" class="btn-admin">Administration</a>
              {{/if}}
              <button id="logout-btn" class="btn-logout">Déconnexion</button>
            {{else}}
              <a href="/login" class="btn-login">Connexion/Inscription</a>
            {{/if}}
          </li>
        </ul>
      </nav>

    </div>
  </div>
</header>