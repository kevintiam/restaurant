<section class="container">
  <!-- Gestion de l'affichage pour l'inscription-->
  <div class="infos-loging" id="infos-loging">
    <h1>Rebonjour !</h1>
    <p>Vous avez déjà un compte ?</p>
    <a href="#connexion" id="login-bascule">Se connecter</a>
  </div>
  <!-- Formulaire de connexion -->
  <div class="connexion active" id="connexion">
    <button
      type="button"
      class="toggle-arrow"
      aria-label="Passer à l'inscription"
      id="toggle-connexion"
    >
      <i class="fas fa-arrow-right"></i>
    </button>
    <p class="title">Connexion</p>
    <p class="subtitle">Connectez-vous à votre espace</p>

    <form action="" id="login-form" autocomplete="off">
      <div class="user">
        <!-- Nom d'utilisateur -->
        <label for="user-login" class="input-with-icon">
          <i class="fas fa-user" aria-hidden="true"></i>
          <input
            type="text"
            id="user-login"
            name="user"
            placeholder="Adresse Email"
            autocomplete="off"
            required
          />
        </label>

        <!-- Mot de passe -->
        <label for="passwd-login" class="input-with-icon password-field">
          <i class="fas fa-lock" aria-hidden="true"></i>
          <input
            type="password"
            id="passwd-login"
            name="passwd"
            placeholder="Mot de passe"
            autocomplete="new-password"
            required
          />
          <button
            type="button"
            class="toggle-password"
            id="toggle-password-login"
            aria-label="Afficher le mot de passe"
          >
            <i class="fas fa-eye"></i>
          </button>
        </label>
      </div>

      <div class="option">
        <label class="remember">
          <input type="checkbox" name="memo" id="memo-login" />
          Se souvenir de moi
        </label>
        <a href="./forgot-password.html" id="forgot-password-link">Mot de passe
          oublié ?</a>
      </div>
      <span id="login-error-message"></span>
      <button type="submit">Se connecter</button>

      <div class="sing">
        <p>Ou connectez-vous avec</p>
        <div class="reseaux-sociaux">
          <a
            href="https://google.com"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Google"
          >
            <i class="fab fa-google"></i>
          </a>
          <a
            href="https://facebook.com"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Facebook"
          >
            <i class="fab fa-facebook"></i>
          </a>
          <a
            href="https://github.com/tiamkevin9"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
          >
            <i class="fab fa-github"></i>
          </a>
          <a
            href="https://linkedin.com/in/kevintiam"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
          >
            <i class="fab fa-linkedin"></i>
          </a>
        </div>
      </div>
    </form>
  </div>

  <!-- Formulaire d'inscription -->
  <div class="register" id="register">
    <button
      type="button"
      class="toggle-arrow"
      aria-label="Passer à la connexion"
      id="toggle-register"
    >
      <i class="fas fa-arrow-left"></i>
    </button>
    <p class="title">Inscription</p>
    <p class="subtitle">Créez votre compte dès maintenant</p>
    <form action="" id="register-form">
      <div class="user">
        <!-- Nom d'utilisateur -->
        <label for="user-register" class="input-with-icon">
          <i class="fas fa-user" aria-hidden="true"></i>
          <input
            type="text"
            name="user"
            id="user-register"
            required
            placeholder="Nom d'utilisateur"
          />
        </label>
        <!-- Email -->
        <label for="email-register" class="input-with-icon">
          <i class="fas fa-envelope" aria-hidden="true"></i>
          <input
            type="email"
            name="email"
            id="email-register"
            required
            placeholder="Adresse e-mail"
          />
        </label>
        <!-- Mot de passe -->
        <label for="passwd-register" class="input-with-icon password-field">
          <i class="fas fa-lock" aria-hidden="true"></i>
          <input
            type="password"
            name="passwd"
            id="passwd-register"
            required
            placeholder="Mot de passe"
          />
          <button
            type="button"
            class="toggle-password"
            id="toggle-password"
            aria-label="Afficher le mot de passe"
          >
            <i class="fas fa-eye"></i>
          </button>
        </label>

        <!-- Confirmation mot de passe -->
        <label
          for="passwd-confirm-register"
          class="input-with-icon password-field"
        >
          <i class="fas fa-lock" aria-hidden="true"></i>
          <input
            type="password"
            name="passwd-confirm"
            id="passwd-confirm-register"
            required
            placeholder="Confirmer le mot de passe"
          />
          <button
            type="button"
            class="toggle-password"
            id="toggle-password-confirm"
            aria-label="Afficher le mot de passe"
          >
            <i class="fas fa-eye"></i>
          </button>
        </label>
      </div>
      <span id="register-error-message"></span>
      <button type="submit">S’inscrire</button>

      <div class="sing">
        <p>Ou s’inscrire avec un compte social</p>
        <div class="reseaux-sociaux">
          <a
            href="/auth/google"
            aria-label="Google"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Google"
          >
            <i class="fab fa-google"></i>
          </a>
          <a
            href="https://facebook.com"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Facebook"
          >
            <i class="fab fa-facebook"></i>
          </a>
          <a
            href="https://github.com/tiamkevin9"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
          >
            <i class="fab fa-github"></i>
          </a>
          <a
            href="https://linkedin.com/in/kevintiam"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
          >
            <i class="fab fa-linkedin"></i>
          </a>
        </div>
      </div>
    </form>
  </div>

  <!-- Gestion de l'affichage pour l'inscription-->
  <div class="infos-register" id="infos-register">
    <h1>Bonjour, ravi de vous revoir !</h1>
    <p>Vous n’avez pas encore de compte ?</p>
    <a href="#register" id="register-bascule">Creer un compte</a>
  </div>
</section>